    "paths": {
        "images": "images1",
        "sounds": "sounds",
        "saves": "saves",
        "logs": "logs"
    },
    "advanced": {
        "debug_mode": false,
        "performance_mode": false,
        "animation_quality": "high",
        "texture_filtering": true
    }
